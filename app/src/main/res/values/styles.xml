<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Heading Styles -->
    <style name="TextHeading1">
        <item name="android:textSize">@dimen/text_heading_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextHeading2">
        <item name="android:textSize">@dimen/text_heading_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextHeading3">
        <item name="android:textSize">@dimen/text_heading_3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextHeading4">
        <item name="android:textSize">@dimen/text_heading_4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
