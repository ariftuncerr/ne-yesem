<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="153dp"
    android:layout_height="234dp">
    <!-- Kart 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/recipeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipeImg"
                android:layout_width="137dp"
                android:layout_height="120dp"
                android:layout_gravity="fill"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:foregroundGravity="fill"
                android:scaleType="centerCrop"
                android:src="@drawable/recommend" />

            <TextView
                android:id="@+id/recipeNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Kremalı Makarna"
                android:textAlignment="textStart"
                android:textColor="@color/text950" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/favImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/numberOfFavTxt"
                    app:layout_constraintEnd_toStartOf="@+id/numberOfFavTxt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/numberOfFavTxt"
                    app:layout_constraintVertical_bias="0.117"
                    app:srcCompat="@drawable/favorite_14" />

                <TextView
                    android:id="@+id/numberOfFavTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="78 kişi favorilerine ekledi"
                    android:textColor="@color/text300"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/favImg"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/numberOfMissingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 eksik malzeme var"
                android:textColor="@color/text300"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ctgTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/oval_text"
                android:backgroundTint="@color/bgDrink"
                android:padding="1dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="category"
                android:textAlignment="center"
                android:textColor="@color/colorDrink"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ctgCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bgDrink"
                app:cardCornerRadius="8dp">

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>