<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/cardview_shadow_start_color"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/recipeCard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:padding="3dp">

        <!-- IMAGE + LIKE OVERLAY -->
        <FrameLayout
            android:id="@+id/imageHolder"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:clipToOutline="false"
            android:clipToPadding="false">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recipeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/TopRoundedImage" />

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end|top"
                android:layout_margin="8dp"
                android:background="@drawable/bg_like_circle"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/no_fav_24" />
        </FrameLayout>

        <!-- TITLE -->
        <TextView
            android:id="@+id/recipeNameTxt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="4dp"
            android:text="Kremalı Makarna"
            android:textColor="@color/text950"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- FAV COUNT ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/favImg"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/favorite_14" />

            <TextView
                android:id="@+id/numberOfFavTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="78 kişi favorilerine ekledi"
                android:textColor="@color/text300"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- MISSING -->
        <TextView
            android:id="@+id/numberOfMissingTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:text="2 eksik malzeme var"
            android:textColor="@color/text300"
            android:textSize="12sp" />

        <!-- CATEGORY CHIP + DURATION -->
        <LinearLayout
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/typeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_text"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:paddingEnd="8dp"
                android:paddingBottom="2dp"
                android:text="Ana Yemek"
                android:textColor="@color/colorDrink"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="•"
                android:textColor="@color/text300"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/durationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="30 dk."
                android:textColor="@color/text300"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
