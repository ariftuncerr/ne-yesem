<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    tools:context=".presentation.ui.home.profile.SettingsFragment">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tarif Hatırlatma -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tarif hatırlatma"
                android:textColor="@color/text950"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@color/primary50"
                app:trackTint="@color/primary"
                app:trackTintMode="src_in" />
        </LinearLayout>

        <!-- Eposta Bildirimi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="E-posta bildirimi al"
                android:textColor="@color/text950"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@color/primary50"
                app:trackTint="@color/primary"
                app:trackTintMode="src_in" />
        </LinearLayout>

        <!-- Alışveriş Hatırlatma -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Alışveriş hatırlatma"
                android:textColor="@color/text950"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchShopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="@color/primary50"
                app:trackTint="@color/primary"
                app:trackTintMode="src_in" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>