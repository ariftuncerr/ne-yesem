<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.home.recipe.RecipeDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <View
            android:id="@+id/preaparingView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_pink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Tarifiniz Hazırlanıyor..."
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/preaparingView" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="Bu işlem birkaç saniye sürebilir...  Lütfen bekleyin."
            android:textAlignment="center"
            android:textColor="@color/text600"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/recipeImageHolder"
                android:layout_width="0dp"
                android:layout_height="251dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:clipToOutline="false"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/recipeImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/TopRoundedImage"
                    app:srcCompat="@drawable/recommend" />

                <ImageButton
                    android:id="@+id/recipeBtnLike"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end|top"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_like_circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="6dp"
                    android:src="@drawable/no_fav_24" />
            </FrameLayout>

            <TextView
                android:id="@+id/recipeTt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kremalı Pasta"
                android:textColor="@color/text900"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipeImageHolder" />

            <TextView
                android:id="@+id/detailNumberOfFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="78 Kişi Beğendi"
                android:textColor="@color/text300"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/numberOfFavBtn"
                app:layout_constraintTop_toBottomOf="@+id/recipeTt" />

            <ImageButton
                android:id="@+id/numberOfFavBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent"
                android:src="@drawable/favorite_14"
                app:layout_constraintBottom_toBottomOf="@+id/detailNumberOfFav"
                app:layout_constraintEnd_toStartOf="@+id/detailNumberOfFav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/detailNumberOfFav" />

            <TextView
                android:id="@+id/recipeDetailTxt"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="Lorem ipsum dolor sit amet consectetur. Quisque diam et cursus amet porttitor et. Quam leo su."
                android:textColor="@color/text300"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailNumberOfFav" />

            <TextView
                android:id="@+id/timeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="30 dk"
                android:textAlignment="center"
                android:textColor="@color/text700"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/timeBtn"
                app:layout_constraintStart_toStartOf="@+id/timeBtn"
                app:layout_constraintTop_toBottomOf="@+id/timeBtn" />

            <TextView
                android:id="@+id/personsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2-3 Kişilik"
                android:textAlignment="center"
                android:textColor="@color/text700"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/personsBtn"
                app:layout_constraintStart_toStartOf="@+id/personsBtn"
                app:layout_constraintTop_toBottomOf="@+id/personsBtn" />

            <TextView
                android:id="@+id/coloriesTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="400 kalori"
                android:textAlignment="center"
                android:textColor="@color/text700"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/calorieBtn"
                app:layout_constraintStart_toStartOf="@+id/calorieBtn"
                app:layout_constraintTop_toBottomOf="@+id/calorieBtn" />

            <TextView
                android:id="@+id/typeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ana Yemek"
                android:textAlignment="center"
                android:textColor="@color/text700"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/typeBtn"
                app:layout_constraintStart_toStartOf="@+id/typeBtn"
                app:layout_constraintTop_toBottomOf="@+id/typeBtn" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ingAndPreparationCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timeTxt">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/ingOrPreparationTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="@color/secondary"
                    app:tabSelectedTextColor="@color/secondary"
                    app:tabTextColor="@color/text500">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Malzemeler" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yapılışı" />

                </com.google.android.material.tabs.TabLayout>

            </androidx.cardview.widget.CardView>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/ingOrPreparationViewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ingAndPreparationCard" />

            <ImageButton
                android:id="@+id/timeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_backround"
                android:backgroundTint="@color/bgSalad"
                android:src="@drawable/time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipeDetailTxt" />

            <ImageButton
                android:id="@+id/personsBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_backround"
                android:backgroundTint="@color/bgMainCourse"
                android:src="@drawable/persons"
                app:layout_constraintStart_toEndOf="@+id/timeBtn"
                app:layout_constraintTop_toBottomOf="@+id/recipeDetailTxt" />

            <ImageButton
                android:id="@+id/calorieBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_backround"
                android:backgroundTint="@color/bgBreakfast"
                android:src="@drawable/calori"
                app:layout_constraintStart_toEndOf="@+id/personsBtn"
                app:layout_constraintTop_toBottomOf="@+id/recipeDetailTxt" />

            <ImageButton
                android:id="@+id/typeBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_backround"
                android:backgroundTint="@color/bgAppetizer"
                android:src="@drawable/ctg"
                app:layout_constraintStart_toEndOf="@+id/calorieBtn"
                app:layout_constraintTop_toBottomOf="@+id/recipeDetailTxt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>