<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ÜST: Avatar + kamera -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/person_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:src="@drawable/camera"
            android:translationX="8dp"
            android:translationY="8dp"
            app:backgroundTint="@color/primary"
            app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
            app:layout_constraintEnd_toEndOf="@+id/imgAvatar"
            app:tint="@color/primary50" />

        <!-- İsim -->

        <TextView
            android:id="@+id/profileNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Arif Tunçer"
            android:textColor="@color/primary800"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar" />

        <!-- E-posta -->
        <TextView
            android:id="@+id/profileEmailTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="ariftuncer@gmail.com"
            android:textColor="@color/text300"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileNameTxt" />

        <!-- İçerik dikey alan -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentColumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profileEmailTxt">

            <!-- Tercihlerim Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPrefs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvPrefsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="26dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Tercihlerim"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/tvAllergy"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvDiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Beslenme tarzı: Klasik"
                        app:layout_constraintStart_toStartOf="@+id/tvPrefsTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvPrefsTitle" />

                    <TextView
                        android:id="@+id/tvAllergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="1dp"
                        android:text="Alerji: Fıstık"
                        app:layout_constraintBottom_toTopOf="@+id/tvDislikes"
                        app:layout_constraintStart_toStartOf="@+id/tvPrefsTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvDiet" />

                    <TextView
                        android:id="@+id/tvDislikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="16dp"
                        android:text="Sevmediğim ürünler: Kivi, Kereviz"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvPrefsTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvAllergy" />


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/editPrefBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:elevation="6dp"
                        android:src="@drawable/edit"
                        android:translationX="8dp"
                        android:translationY="8dp"
                        app:backgroundTint="@color/primary"
                        app:layout_constraintBottom_toTopOf="@+id/tvDiet"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvPrefsTitle"
                        app:tint="@color/primary50" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Liste Öğesi (yeniden kullanılabilir satır) -->

            <!-- Çıkış Yap -->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Alt boşluk -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Çıkış Yap"
            app:icon="@drawable/log_out"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentColumn">

            <include
                android:id="@+id/rowShopping"
                layout="@layout/item_profile_row" />

            <include
                android:id="@+id/rowSettings"
                layout="@layout/item_profile_row" />

            <include
                android:id="@+id/rowChangePassword"
                layout="@layout/item_profile_row" />

            <include
                android:id="@+id/rowChangeEmail"
                layout="@layout/item_profile_row" />

            <include
                android:id="@+id/rowLanguage"
                layout="@layout/item_profile_row" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
